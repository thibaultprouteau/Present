<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.attendance">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_attendance"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_attendance"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER"
                    android:theme="@style/AppTheme.Launcher" />
            </intent-filter>
        </activity>
        <activity
            android:name=".record_attendance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".add_lecture"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ajout_groupe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visualize_group_members"
            android:screenOrientation="portrait" />
        <activity
            android:name=".seances_cours"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ajout_etudiant"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ajout_cours"
            android:screenOrientation="portrait" />
        <activity
            android:name=".statistiques"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gerer_groupes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gerer_cours"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>